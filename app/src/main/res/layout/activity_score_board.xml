<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreBoard"
    android:orientation="vertical"
    android:background="@drawable/scorepagegradient">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Score Board"
        android:textColor="@color/blue5"
        android:textSize="@dimen/_40ssp"
        android:textColorHighlight="@color/blue1"
        android:textLocale="US"
        android:fontFamily="@font/monoglycerideextrabold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingStart="@dimen/_10sdp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ScoreTitle"
        android:layout_marginTop="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_10sdp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:cacheColorHint="#00000000"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>